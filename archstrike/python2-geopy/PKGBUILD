# Maintainer: ArchStrike <team@archstrike.org>

buildarch=1

pkgname=python2-geopy
pkgver=1.18.0
pkgrel=1
pkgdesc="Python Geocoding Toolbox"
url="https://github.com/geopy/geopy"
depends=('python2')
makedepends=('python2-setuptools')
license=('MIT')
arch=('any')
source=("https://github.com/geopy/geopy/archive/${pkgver}.tar.gz")
sha512sums=('f20e2bda8ae500873ba655ab56f4fc1e685ffb3609b001543ed8b127fe06c6a7112a6de02cb919a68b1961e8f45f156d5b45ba41b3771f90cf97d2c9aed21ce5')

build() {
    cd $srcdir/geopy-$pkgver
    python2 setup.py build
}

package() {
    cd $srcdir/geopy-$pkgver
    python2 setup.py install --root="$pkgdir" --skip-build -O1
}
