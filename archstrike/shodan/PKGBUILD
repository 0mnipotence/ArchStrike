# Maintainer: ArchStrike <team@archstrike.org>

buildarch=1

pkgname=shodan
pkgver=1.6.3
pkgrel=1
groups=('archstrike' 'archstrike-recon')
pkgdesc='A Python2 library for Shodan.io'
url='http://github.com/achillean/shodan-python'
depends=('python2-click' 'python2-colorama' 'python2-requests' 'python2-simplejson')
license=('MIT')
arch=('any')
makedepends=('python2-setuptools')
source=("https://pypi.python.org/packages/65/57/913f5d4fb84dd35bec34a6c98df55dda73193103f14278b706cd13818ed1/shodan-${pkgver}.tar.gz")
sha512sums=('d290526db800e0cecd4c897370be31b3447bf5be4b4138370c1d512d7e6ab1eb28819f5a571f052ce2d7d9e6d802f62caf752fd6b2e83495ab886705f5b5cacb')

build() {
  cd $pkgname-$pkgver
  python2 setup.py build
}

package() {
  cd $pkgname-$pkgver
  python2 setup.py install --root="$pkgdir" -O1 --skip-build
  install -Dm0644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  sed -i 's|python|python2|' $pkgdir/usr/lib/python2.7/site-packages/shodan/cli/worldmap.py
}
