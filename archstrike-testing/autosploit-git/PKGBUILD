# Maintainer: ArchStrike <team@archstrike.org>

buildarch=1

_pkgname=autosploit
pkgname=${_pkgname}-git
pkgver=r25.e03e7f2
pkgrel=1
groups=('archstrike' 'archstrike-exploit')
pkgdesc="Automate the exploitation of remote hosts"
arch=('any')
url='https://github.com/NullArray/AutoSploit'
license=('GPL3')
depends=('python2' 'shodan' 'python2-blessings' 'metasploit')
makedepends=('git')
provides=('autosploit')
source=("${pkgname}::git+https://github.com/NullArray/AutoSploit.git")
md5sums=('SKIP')

pkgver() {
  cd "${srcdir}/${pkgname}"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

prepare(){
  grep -iRl 'python' "${srcdir}/${pkgname}" | xargs sed -i 's|#!.*/usr/bin/python|#!/usr/bin/python2|;s|#!.*/usr/bin/env python$|#!/usr/bin/env python2|'
}

package() {
  cd "${srcdir}/${pkgname}"

  install -dm755 "${pkgdir}/usr/share/${pkgname}"
  install -dm755 "${pkgdir}/usr/bin"

  install -Dm755 "${_pkgname}.py" "${pkgdir}/usr/share/${pkgname}/${_pkgname}.py"
  install -Dm755 "modules.txt" "${pkgdir}/usr/share/${pkgname}/modules.txt"

cat > "${pkgdir}/usr/bin/${_pkgname}" << EOF
#!/bin/sh
cd /usr/share/${pkgname}
python2 ${_pkgname}.py "\$@"
EOF

chmod +x "${pkgdir}/usr/bin/${_pkgname}"

}
