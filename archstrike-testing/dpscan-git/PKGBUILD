# Maintainer: ArchStrike <team@archstrike.org>

buildarch=1

pkgname=dpscan-git
pkgver=20120216.r4
pkgrel=1
groups=('archstrike' 'archstrike-scanners')
pkgdesc="Drupal Vulnerabilty Scanner"
url="https://github.com/insaneisnotfree/Blue-Sky-Information-Security"
arch=('any')
license=('GPL2')
depends=('python2' 'wget')
makedepends=('git')
replaces=('dpscan')
source=("$pkgname::git+https://github.com/insaneisnotfree/Blue-Sky-Information-Security.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname
  printf "%s.r%s" "$(git show -s --format=%ci master | sed 's/\ .*//g;s/-//g')" "$(git rev-list --count HEAD)"
}

prepare() {
  cd "$pkgname"
  sed -i 's/\home\/bin\/python/usr\/bin\/python2/' DPScan.py
}

package() {
  cd "$pkgname"

  install -Dm755 DPScan.py "$pkgdir/usr/bin/dpscan"
}
