# Maintainer: ArchStrike <team@archstrike.org>

buildarch=220

pkgname="libbde"
pkgver=20190317
pkgrel=1
pkgdesc="Library and tools to access the BitLocker Drive Encryption (BDE) encrypted volumes"
arch=("i686" "x86_64" "armv6h" "armv7h" 'aarch64')
url='https://github.com/libyal/libbde'
license=('GPL3')
depends=('fuse' 'libcsystem' 'libbfio' 'python2')
install="$pkgname.install"
source=("https://github.com/libyal/libbde/releases/download/${pkgver}/libbde-alpha-${pkgver}.tar.gz")
sha512sums=('8c725d8074a2ec2ddbd0d6289aec1b91d19dd441ed8bca330db613711aeda47bf95d753f4c1e7b1079fe4fd2616c689a1a7d4d5340e50e99a7ec8c5e412d8f58')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  PYTHON_VERSION="2" ./configure --prefix=/usr --disable-rpath --enable-verbose-output --enable-debug-output --enable-python
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}/" install
}
