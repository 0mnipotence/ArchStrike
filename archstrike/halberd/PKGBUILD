# Maintainer: ArchStrike <team@archstrike.org>

buildarch=1

pkgname=halberd
pkgver=0.2.4
pkgrel=2
pkgdesc="HTTP load balancer detector"
url="http://halberd.superadditive.com/"
depends=('python2')
makedepends=('python2-setuptools')
license=('GPL2')
arch=('any')
source=("http://halberd.superadditive.com/dist/halberd-$pkgver.tar.gz")
sha512sums=('934b3e0af72d9c8454ee4c7b2afc1513555728955bc7530d6e5e4cbd8426e615111b0875c25e9a6d9794bb6e64095fac908c794cc3295b59a6ff521ebd1aec1f')

build() {
    cd $pkgname-$pkgver
    python2 setup.py build
}

package() {
    cd $pkgname-$pkgver
    python2 setup.py install --root="$pkgdir" --optimize=1
    install -dm755 "$pkgdir"/usr/share/man
    mv "$pkgdir"/usr/man "$pkgdir"/usr/share/man
}

