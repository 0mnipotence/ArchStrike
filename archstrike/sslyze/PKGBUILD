# Maintainer: ArchStrike <team@archstrike.org>

buildarch=192

pkgname=sslyze
pkgver=2.1.2
pkgrel=1
groups=('archstrike' 'archstrike-misc')
pkgdesc="Python tool for analyzing the configuration of SSL servers and for identifying misconfigurations"
arch=('i686' 'x86_64')
url='https://github.com/nabla-c0d3/sslyze'
license=('GPL2')
depends=('python')
makedepends=('nassl' 'python-setuptools')
source=("https://github.com/nabla-c0d3/sslyze/archive/${pkgver}.zip")
sha512sums=('8d50acf8783c3a1da3251fcacad2bb44c2b42e5f17b577dcce3d9f9def03f46e0061822dd4350a08b822d6a2ab54f1163dc4460cf2ddef8e6fcf45f4171fd4f8')

build(){
  cd ${pkgname}-${pkgver}
  python setup.py build
}

package() {
  cd $pkgname-$pkgver
  python setup.py install --root="${pkgdir}" -O1 --skip-build
  install -Dm644 LICENSE.txt "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE.txt"
}
