# Maintainer: ArchStrike <team@archstrike.org>

buildarch=220

_pkgname=alfred
pkgname=batman-${_pkgname}
groups=('archstrike' 'archstrike-wireless')
pkgver=2019.4
pkgrel=1
pkgdesc='Almighty Lightweight Fact Remote Exchange Daemon'
url='http://www.open-mesh.org'
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
license=('GPL')
depends=('gpsd' 'libnl')
#makedepends=('hardening-wrapper')
source=("https://downloads.open-mesh.org/batman/stable/sources/${_pkgname}/${_pkgname}-${pkgver}.tar.gz")
sha512sums=('8b1226ac9da271bc63c8db139295c35ebb889cecaf4e412dc7eb28f5d559add836b7f4d13985cb88336bbc4122fe942a02b4cab7515a3250383aab42cd36bcea')

build(){
  cd ${_pkgname}-${pkgver} || exit
  make
}

package() {
  cd ${_pkgname}-${pkgver} || exit
  make DESTDIR="${pkgdir}" PREFIX=/usr SBINDIR=/usr/bin install
}
