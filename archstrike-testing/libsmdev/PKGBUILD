# Maintainer: ArchStrike <team@archstrike.org>

buildarch=212

pkgname="libsmdev"
pkgver="20160109"
pkgrel=1
pkgdesc="Library to access to storage media devices"
arch=("i686" "x86_64" "armv6h" "armv7h")
url='https://github.com/libyal/libsmdev'
license=('GPL3')
depends=('libcsystem' 'python2')
makedepends=('git')
source=("https://github.com/libyal/libsmdev/archive/$pkgver.tar.gz")
sha512sums=('ec63940c2eb09d7febede4db10888871574ccb325273d206922a2438537df5506edc99bdd2bf413a2ca776c70afa5d03f085e8337af0e9ca6c9c1e74b4867620')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./synclibs.sh
  ./autogen.sh
  PYTHON_VERSION="2" ./configure --prefix=/usr --disable-rpath --enable-verbose-output --enable-debug-output --enable-python
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
