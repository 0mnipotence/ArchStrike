buildarch=220

pkgname=libfixbuf
pkgver=2.3.0
pkgrel=1
pkgdesc="IPFIX Message Format Implementation"
arch=("i686" "x86_64" "armv6h" "armv7h" 'aarch64')
url='http://tools.netsa.cert.org/fixbuf/'
license=('GPL')
depends=('glib2')
source=("https://tools.netsa.cert.org/releases/${pkgname}-${pkgver}.tar.gz")
sha512sums=('c5d2fd139e3c10cb091ed808ef6f53b4ef8d48fadb22b82c5505f5fc32b0ac19ebaface84b1ccc0fe887bdf279f63f31e6128ca0e17beabb98f4f75c4d3dd2c7')

build() {
  cd "${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make
}

package() {
  cd "${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}/" install
}
