# Maintainer: ArchStrike <archstrikelinux@gmail.com>

buildarch=1
noautobuild=1

pkgname=archstrike-keyring
pkgver=20150826
pkgrel=3
pkgdesc='ArchStrike PGP keyring'
url='https://archstrike.org'
license=('GPL3')
groups=('archstrike')
arch=('any')
depends=('gnupg')
makedepends=('git')
source=('git+https://github.com/ArchStrike/archstrike-keyring.git')
sha512sums=('SKIP')
install=$pkgname.install

pkgver() {
  cd $pkgname
  head -n 1 Makefile | sed 's|^V=||'
}

package() {
  cd $pkgname
  make PREFIX=/usr DESTDIR="$pkgdir" install
}

