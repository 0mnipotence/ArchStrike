# Maintainer: ArchStrike <archstrikelinux@gmail.com>

buildarch=20

pkgname=4deck-git
pkgver=0.1
groups=('archstrike' 'archstrike-drone' 'archstrike-meta')
pkgrel=3
pkgdesc="An addon from The Deck Project. Create a magic hub. ARM ONLY SUPPORT"
arch=('armv6h' 'armv7h')
url="https://github.com/adminempire/${pkgname}/"
license=('CCPL')
depends=('bash')
makedepends=("git")
source=("${pkgname}::git+https://github.com/adminempire/4deck.git")
sha512sums=('SKIP')

pkgver() {
  cd "${pkgname}"
  printf "%s.r%s" "$(git show -s --format=%ci master | sed 's/\ .*//g;s/-//g')" "$(git rev-list --count HEAD)"
}

package() {
    cd ${pkgname}/code
    install -Dm755 ${pkgname}.sh "${pkgdir}/usr/bin/${pkgname}"
    install -Dm755 prot-mount.sh "${pkgdir}/usr/bin/prot-mount"
}
