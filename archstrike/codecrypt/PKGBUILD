# Maintainer: ArchStrike <team@archstrike.org>

buildarch=220

pkgname=codecrypt
pkgver=1.7.6
pkgrel=1
pkgdesc="A GnuPG-like program for encryption and signing that uses only quantum-computer-resistant algorithms"
url="https://github.com/exaexa/$pkgname"
license=('GPL3')
groups=('archstrike-crypto')
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
depends=('crypto++' 'gmp' 'fftw')
makedepends=('libtool' 'automake' 'autoconf')
source=("https://github.com/exaexa/codecrypt/archive/v$pkgver.tar.gz")
sha512sums=('0ff131619c55daedac40697e15e1086d66ab0c043ba56b08096764fac5b24fb8143fcf797be00b8dc56ad97338a9219b40cb64949f214726e7e3639c01f7c5cc')

build() {
    LDFLAGS="$LDFLAGS -pthread"

    cd "$pkgname-$pkgver"
    ./autogen.sh
    ./configure --prefix=/usr
    make
}

package() {
    cd "$pkgname-$pkgver"
    make DESTDIR="$pkgdir" install
}
