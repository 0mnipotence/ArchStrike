# Maintainer: ArchStrike <team@archstrike.org>
# Contributor: Michal Bozon <michal.bozon__at__gmail.com>

ibuildarch=212

_pkgname=libyaml
pkgname=pyyaml-libyaml
pkgver=0.1.6
pkgrel=1
pkgdesc="LibYAML is a YAML 1.1 parser and emitter written in C"
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
url="http://pyyaml.org/wiki/LibYAML"
license=('MIT')
provides=("$_pkgname")
conflicts=("$_pkgname")
source=(http://pyyaml.org/download/libyaml/yaml-$pkgver.tar.gz)
sha512sums=('eef1f26fec0a305836b8c6a65def4e2864fe2415618e7490717d4e42f0fc51048727ab0e7e4a6c3a2783ae762fddd6b78091a76a6cd3a2710ae18e3dfb27cd44')

build() {
  cd "$srcdir/yaml-$pkgver"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/yaml-$pkgver"
  make DESTDIR="$pkgdir" install
  install -m644 -D LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}
