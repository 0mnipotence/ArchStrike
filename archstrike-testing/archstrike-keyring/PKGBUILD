# Contributor: Jeremy Lynch <jl archstrike org>
# Contributor: Tyler Bennett <arch3y archstrike org>
# Contributor: Pierre Schmitz <pierre@archlinux.de>

buildarch=1

pkgname=archstrike-keyring
pkgver=20140202
pkgrel=1
pkgdesc='The ArchStrike Projects PGP keyring'
arch=('any')
url='https://bitbucket.org/archstrike/archstrike-*keyring.git'
depends=('archstrike-mirrorlist')
makedepends=('git')
optdepends=('gnupg-largekeys')
license=('GPL')
groups=('archstrike' 'archstrike-*base' 'archstrike-dev')
replaces=('archstrike-meta-armsetup')
install="$pkgname.install"
source=("as-keyring::git+https://github.com/ArchStrike/ArchStrike-keyring.git")
md5sums=('SKIP')

pkgver() {
  cd as-keyring
  git log -1 --format="%cd" --date=short | sed 's|-||g'
}

package() {
  cd as-keyring
  make PREFIX=/usr DESTDIR="$pkgdir" install
}
