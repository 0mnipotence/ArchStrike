# Maintainer: ArchStrike <team@archstrike.org>

buildarch=212

pkgname="libbde"
pkgver="20160110"
pkgrel=1
pkgdesc="Library and tools to access the BitLocker Drive Encryption (BDE) encrypted volumes"
arch=("i686" "x86_64" "armv6h" "armv7h")
url='https://github.com/libyal/libbde'
license=('GPL3')
depends=('fuse' 'libcsystem' 'libbfio' 'python2')
makedepends=('git')
install="$pkgname.install"
source=("https://github.com/libyal/libbde/archive/$pkgver.tar.gz")
sha512sums=('273a2e9499bc931c7102620f1372e182a3279ba075d333da360cd7ed7bbf38b7d1bf690965c311c2a2f585621959076175515280691aed55a9b0fd5eef393f71')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./synclibs.sh
  ./autogen.sh
  PYTHON_VERSION="2" ./configure --prefix=/usr --disable-rpath --enable-verbose-output --enable-debug-output --enable-python
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
