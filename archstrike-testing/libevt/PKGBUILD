# Maintainer: ArchStrike <team@archstrike.org>

buildarch=212

pkgname="libevt"
pkgver="20160107"
pkgrel=1
pkgdesc="Library and tooling to access the Windows Event Log (EVT) format"
arch=("i686" "x86_64" "armv6h" "armv7h")
url='https://github.com/libyal/libevt'
license=('GPL3')
depends=('libcsystem' 'libbfio' 'python2' 'libregf')
install="$pkgname.install"
makedepends=('git')
source=("https://github.com/libyal/libevt/archive/$pkgver.tar.gz")
sha512sums=('c40dd14f1236a89b04c3c20acd6dcc4f347bc9db14c8903ec05e07ebeb1ab879982a9d0357ba0521c2ef1fa5d23c91bffd81c316d31c919ed245e35c400e1ac4')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./synclibs.sh
  ./autogen.sh
  PYTHON_VERSION="2" ./configure --prefix=/usr --disable-rpath --enable-verbose-output --enable-debug-output --enable-python
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
