# Maintainer: ArchStrike <team@archstrike.org>

buildarch=1

pkgname=wfuzz
pkgver=2.3
pkgrel=1
groups=('archstrike' 'archstrike-webapps' 'archstrike-fuzzers')
pkgdesc="Utility to fuzz web applications to find their not linked resources"
url="https://github.com/xmendez/wfuzz"
arch=('any')
license=('GPL')
depends=('python2-pycurl' 'python2-six' 'python2-future' 'python2-configparser' 'python2-wxpython3')
makedepends=('python2-setuptools')
source=("https://github.com/xmendez/wfuzz/archive/v${pkgver}.tar.gz")
sha512sums=('a5adeafecef42b208c99ae53d72ccb1f20a0d09489fc65682dbf8c11b653e4692426bd4f9e26a73e12388d56997673f5644b44d75ada68048e20f645d26c54ae')

prepare() {
  grep -iRl 'python' ${pkgname}-${pkgver} | xargs sed -i 's|python$|python2|g'
}

package() {
  cd ${pkgname}-${pkgver}
  python2 setup.py install --root=${pkgdir} -O1
}
