# Maintainer: ArchStrike <team@archstrike.org>

buildarch=1

pkgname=python2-scp
pkgver=0.12.1
pkgrel=1
pkgdesc="scp module for paramiko"
url="https://github.com/jbardin/scp.py"
depends=('python2')
makedepends=('python2-setuptools')
license=('LGPL')
arch=('any')
source=("https://github.com/jbardin/scp.py/archive/v${pkgver}.tar.gz")
sha512sums=('63680680aa2e274ae7f1718b60fe327246010f0344efb42e3314b41136801cd0793a9bd55c7afed08bc0641e395f609238114da1990843348b1813868f1addc2')

build() {
    cd $srcdir/scp.py-$pkgver
    python2 setup.py build
}

package() {
    cd $srcdir/scp.py-$pkgver
    python2 setup.py install --root="$pkgdir" --skip-build -O1
}
