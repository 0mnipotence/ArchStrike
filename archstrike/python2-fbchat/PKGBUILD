# Maintainer: ArchStrike <team@archstrike.org>

pkgname=python2-fbchat
_pkgname=fbchat
pkgver=1.3.7
pkgrel=1
pkgdesc="Facebook Chat (Messenger) for Python"
url="https://github.com/carpedm20/fbchat/"
depends=('python2-lxml' 'python2-requests' 'python2-beautifulsoup4' 'python2-enum34')
makedepends=('python2-setuptools')
license=('CUSTOM')
arch=('any')
source=("https://github.com/carpedm20/fbchat/archive/v${pkgver}.tar.gz")
sha512sums=('ddfa9fa631cba900f1bd74a1055fbf4b1ce7b0b60f3105a826e3c9671acd82da9c7857efa0cf178ce7bcba1f3ca4e94858238c9a85691f4e5c0b8a698e895fa7')

build() {
    cd ${_pkgname}-${pkgver}
    python2 setup.py build
}

package() {
    cd ${_pkgname}-${pkgver}
    python2 setup.py install --root="${pkgdir}" -O1 --skip-build
    install -Dm644 LICENSE.txt "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE.txt"
}
