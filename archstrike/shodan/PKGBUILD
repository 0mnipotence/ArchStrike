buildarch=212

pkgname=shodan
pkgver=1.4.8
pkgrel=1
groups=('archstrike' 'archstrike-recon')
pkgdesc='A Python2 library for Shodan.io'
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
url='http://github.com/achillean/shodan-python'
depends=('python2-click' 'python2-colorama' 'python2-requests' 'python2-simplejson')
license=('MIT')
arch=('any')
makedepends=('python2-setuptools')
source=("https://pypi.python.org/packages/source/s/$pkgname/$pkgname-$pkgver.tar.gz")
md5sums=('4b9de829a1361bbd10432ada67174863')
sha512sums=('2e7adef7b92b4362b4541a10313596d02042d16035a04b4d60c732953c8badc42308f7ef9c2777d62aae97437b5d159f99edcfb18d9490138dcd0a69176ba037')

build() {
  cd $pkgname-$pkgver
  python2 setup.py build
}

package() {
  cd $pkgname-$pkgver
  python2 setup.py install --root="$pkgdir" --optimize=1
  install -Dm0644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
