buildarch=212

pkgname=python2-pyscard
pkgver=1.9.2
pkgrel=1
pkgdesc="A Python module adding smart cards support to Python"
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
url="http://pyscard.sourceforge.net/"
license=('LGPL')
depends=('python2' 'pcsclite')
conflicts=('pyscard')
replaces=('pyscard')
makedepends=('swig')
source=("http://downloads.sourceforge.net/project/pyscard/pyscard/pyscard%201.9.2/pyscard-$pkgver.tar.gz")
sha512sums=('8579dce6f31348581dbe5dfb6ebeceb35dd43ad6a903d02e00c55ab86353ae429501f0486a35b4916c26e6e380e07400dcd43d039ce18cbebe5061238c624e67')

build() {
  cd "$srcdir/pyscard-$pkgver"
  python2 setup.py build_ext
}

package() {
  cd "$srcdir/pyscard-$pkgver"
  python2 setup.py install --root=$pkgdir --optimize=1
}
