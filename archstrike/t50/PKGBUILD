# Maintainer: ArchStrike <team@archstrike.org>

buildarch=220

pkgname=t50
pkgver=5.6.5
pkgrel=1
groups=('archstrike' 'archstrike-networking' 'archstrike-dos')
pkgdesc="Experimental Multi-protocol Packet Injector Tool"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url='http://t50.sourceforge.net/'
license=('GPL2')
depends=('glibc')
source=("http://downloads.sourceforge.net/project/t50/t50-5.6/t50-${pkgver}.tar.gz")
sha512sums=('4b8c21326286017b9164bba547a26a03b6126c911178c0b43a18bc34044e5c07aaa5cbc1e31321b014487db0259e2ec16ec109fd4d7cf660ddf6b99dff846852')

build() {
  cd "$pkgname-$pkgver"
  ./configure --prefix=/usr --sbindir=/usr/bin
  make
}

package() {
  cd "$pkgname-$pkgver"
  make DESTDIR=$pkgdir install
}
