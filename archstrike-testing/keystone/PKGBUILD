# Maintainer: ArchStrike <team@archstrike.org>

buildarch=212

pkgname=keystone
pkgver=0.9
pkgrel=1
groups=('archstrike' 'archstrike-debugger' 'archstrike-debugging')
pkgdesc="An assembler framework: Core (Arm, Arm64, Hexagon, Mips, PowerPC, Sparc, SystemZ & X86) without any human intervention."
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
url="http://www.keystone-engine.org/"
license=('GPL2')
depends_x86_64+=("gcc-libs-multilib" "python2")
depends=("gcc-libs" "python2")
makedepends=("cmake")
source=("https://github.com/keystone-engine/$pkgname/archive/$pkgver.tar.gz")
sha512sums=('170f8f73a7cdd8f049cda3fbc49b968d8ca8a524bbf8ca161a52be4f3c55003b7afd1df8fc118b7838a8484f6128d180f08f09d7a0dcb2c72c3d2009fd59684d')

build() {
  cd $pkgname-$pkgver
  mkdir build && cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr/ -DCMAKE_BUILD_TYPE=Release -DBUILD_SHARED_LIBS=ON -DLLVM_TARGETS_TO_BUILD="all" -G "Unix Makefiles" .. 
  make 
}

package() {
  cd $pkgname-$pkgver/build
  make DESTDIR=$pkgdir install
}
