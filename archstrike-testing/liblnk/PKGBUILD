# Maintainer: ArchStrike <team@archstrike.org>

buildarch=212

pkgname="liblnk"
pkgver="20160107"
pkgrel=1
pkgdesc="Library and tools to access the Windows Shortcut File (LNK) format"
arch=("i686" "x86_64" "armv6h" "armv7h")
url='https://github.com/libyal/liblnk'
license=('GPL3')
depends=('libfwsi')
makedepends=('git')
source=("https://github.com/libyal/liblnk/archive/$pkgver.tar.gz")
sha512sums=('d5e97d4037147ae1fd8ac255f94f2779a121017b9fc2b86e18009ea1ebd94b01c2084d6040bb434fcbba7e73c91d6a169e204b629d3604c29da5c4bc5fee9c2e')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./synclibs.sh
  ./autogen.sh
  PYTHON_VERSION="2" ./configure --prefix=/usr --disable-rpath --enable-verbose-output --enable-debug-output --enable-python
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
