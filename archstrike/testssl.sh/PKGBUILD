buildarch=1

pkgname='testssl.sh'
pkgver=2.9.5
pkgrel=1
pkgdesc="Testing TLS/SSL encryption"
arch=('any')
groups=('archstrike')
url="https://github.com/drwetter/testssl.sh"
license=("GPL")
depends=('coreutils' 'util-linux' 'openssl' 'bind-tools')
source=("testssl-${pkgver}.sh::${url}/raw/v${pkgver}/testssl.sh")
sha512sums=('640f4f742d8823174a61a59dd6d19b89f61507fe7bd4164151730d9c9ac02b15c28ad70d0d89035060c21590612b81c3044ebce0ba6433ef5af3aa8e9c36d64f')

package() {
  cd "${srcdir}"

  install -D -m755 "testssl-${pkgver}.sh" "${pkgdir}/usr/bin/testssl.sh"
}
