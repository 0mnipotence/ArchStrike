# Maintainer: ArchStrike <team@archstrike.org>

buildarch=212

pkgname=hashdb
pkgver=2.0.1
pkgrel=1
groups=('archstrike' 'archstrike-forensics' 'archstrike-misc')
pkgdesc="A block hash toolkit"
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
url='https://github.com/NPS-DEEP/hashdb/'
license=('GPL')
depends=('tre' 'libxml2' 'python2') 
makdepends=('autoconf')
source=("https://github.com/NPS-DEEP/hashdb/archive/v$pkgver.tar.gz")
sha512sums=('90a636cfe1e3f2298474ca4520521170346776accf607a92a93b3ecf6ae695a02522d04c3f4270b688c37a4d5527180be09e5d9304027e877e2078ab4d762f62')

build() {
  cd "${pkgname}-${pkgver}"
  ./bootstrap.sh
  ./configure --prefix=/usr --sysconfdir=/etc
  make
}

package() {
  cd "${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
