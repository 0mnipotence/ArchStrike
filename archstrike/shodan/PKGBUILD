# Maintainer: ArchStrike <team@archstrike.org>                                                                                                                                                           [0/2845]

buildarch=212

pkgname=shodan
pkgver=1.5.4
pkgrel=1
groups=('archstrike' 'archstrike-recon')
pkgdesc='A Python2 library for Shodan.io'
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
url='http://github.com/achillean/shodan-python'
depends=('python2-click' 'python2-colorama' 'python2-requests' 'python2-simplejson')
license=('MIT')
arch=('any')
makedepends=('python2-setuptools')
source=("https://pypi.python.org/packages/35/c1/046f2f9d6f529f391eaadade324e9db4cee122e840dd0cce38faacb44cb3/$pkgname-$pkgver.tar.gz")
sha512sums=('94726f959230a3369ada9ece34d2f1e7972fdf93a6d21c82d9c178ab9acefbbe67e18adf0f7dfd43ddbfe0d9132156d7e86870f2718b934e76402cd091ba2081')

build() {
  cd $pkgname-$pkgver
  python2 setup.py build
}

package() {
  cd $pkgname-$pkgver
  python2 setup.py install --root="$pkgdir" --optimize=1
  install -Dm0644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  sed -i 's|python|python2|' $pkgdir/usr/lib/python2.7/site-packages/shodan/cli/worldmap.py
}
