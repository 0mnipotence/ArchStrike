# Maintainer: ArchStrike <team@archstrike.org>

buildarch=1

pkgname=archstrike-xfce-config
pkgver=1.1
pkgrel=1
groups=('archstrike-desktop')
arch=('any')
pkgdesc="ArchStrike config files for Xfce"
url="https://github.com/ArchStrike/archstrike-xfce-config"
license=('GPL3')
depends=('network-manager-applet' 'numix-themes' 'ttf-hack')
source=("https://github.com/ArchStrike/archstrike-xfce-config/archive/${pkgver}.tar.gz")
sha512sums=('103095b67c1b9f04a9cb646aafe35ac97f5e648402b4657ae6bef374e677049accdab51ce49c598c9e5b154adfb2c4f11f56be7ba06c663f9ce83cc7d469f252')

package() {
  cd ${pkgname}-${pkgver}
  install -dm755 "${pkgdir}/usr/share/${pkgname}"

  cp -a --no-preserve=ownership * "${pkgdir}/usr/share/${pkgname}"

}

