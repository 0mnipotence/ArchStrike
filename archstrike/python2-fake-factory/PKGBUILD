# Maintainer: ArchStrike <team@archstrike.org>

buildarch=1

pkgname=python2-fake-factory
_pkgname=faker
pkgver=0.9.1
pkgrel=1
pkgdesc="Python package that generates fake data for you."
url="http://github.com/joke2k/faker"
depends=('python2' 'python2-dateutil' 'python2-text-unidecode' 'python2-ipaddress')
makedepends=('python2-distribute' )
license=('CUSTOM')
arch=('any')
provides=('faker' 'python2-faker')
source=("https://github.com/joke2k/faker/archive/v${pkgver}.tar.gz")
sha512sums=('8b44cbd166b1095a8c0dfce3440b902bee01a7adae5dd1cfa197832560f12a9305a9e87fb73721c79503dc5ee7db35cc7e9785b44b31a0459bbe6c334fb98bcd')

build() {
    cd ${_pkgname}"-${pkgver}"
    python2 setup.py build
}

package() {
    cd ${_pkgname}"-${pkgver}"
    python2 setup.py install --root="${pkgdir}" --skip-build -O1
    install -Dm0644 LICENSE.txt "${pkgdir}"/usr/share/licenses/"${pkgname}"/LICENSE.txt
}
