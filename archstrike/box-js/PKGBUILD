# Maintainer: ArchStrike <team@archstrike.org>

buildarch=1

pkgname=box-js
pkgver=1.7.0
pkgrel=1
groups=('archstrike' 'archstrike-analysis')
arch=('any')
pkgdesc="A tool for studying JavaScript malware."
url="https://github.com/CapacitorSet/box-js"
license=('MIT')
depends=('nodejs' 'gnuplot' 'npm')
provides=('boxjs-git')
replaces=('boxjs-git')
conflicts=('boxjs-git')
source=("${url}/archive/v${pkgver}.tar.gz")
sha512sums=('a578ca97c5282745860a619463e45fb04eb8114a8a7ffb7a0f18a43826f8c7982fc5bea34da68b343f405d14c2c33dcdf43dff62f29b195fa2429f616af2dcd3')

package() {
  cd ${pkgname}-${pkgver}
  install -dm755 "${pkgdir}/usr/share/${pkgname}"
  install -dm755 "${pkgdir}/usr/share/licenses/${pkgname}"
  install -dm755 "${pkgdir}/usr/bin"

  npm install --production
  find . -name package.json | xargs sed -i "s|${srcdir}|/usr/share/${pkgname}|"

  cp -a --no-preserve=ownership * "${pkgdir}/usr/share/${pkgname}"
  install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}"

cat > "${pkgdir}/usr/bin/${pkgname}" <<EOF
#!/usr/bin/env bash
cd /usr/share/${pkgname}
node run.js "\$@"
EOF
chmod 755 "${pkgdir}/usr/bin/${pkgname}"

}
