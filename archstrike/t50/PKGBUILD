# Maintainer: ArchStrike <team@archstrike.org>

buildarch=220

pkgname=t50
pkgver=5.6.9
pkgrel=1
groups=('archstrike' 'archstrike-networking' 'archstrike-dos')
pkgdesc="Experimental Multi-protocol Packet Injector Tool"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url='http://t50.sourceforge.net/'
license=('GPL2')
depends=('glibc')
source=("http://downloads.sourceforge.net/project/t50/t50-5.6/t50-${pkgver}.tar.gz")
sha512sums=('680403e8c5d4bd8a00ca3917fd14b29ad7dd44b916387375e7dd8299c1bf870e607203a0833791e8f334ec6f3238899efb6cd5143714e1d8f6fe90527118e8f2')

build() {
  cd "${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sbindir=/usr/bin
  make
}

package() {
  cd "${pkgname}-${pkgver}"
  make DESTDIR=${pkgdir} install
}
