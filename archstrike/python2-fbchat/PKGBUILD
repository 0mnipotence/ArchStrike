# Maintainer: ArchStrike <team@archstrike.org>

pkgname=python2-fbchat
_pkgname=fbchat
pkgver=0.6.0
pkgrel=1
pkgdesc="Facebook Chat (Messenger) for Python"
url="https://github.com/carpedm20/fbchat/"
depends=('python2-requests' 'python2-beautifulsoup4')
makedepends=('python2-setuptools')
license=('CUSTOM')
arch=('any')
source=("https://pypi.python.org/packages/87/5a/940f849c0eeae5309dcb58e6c97c6e097d5f8cb167a7777df0beb2d10027/fbchat-$pkgver.tar.gz")
sha512sums=('c7774adbd7e667ec20114381b5d09724647d6101f286371b78df1e01b628de8c340c7729b7b27ff29062bab5c39e4adb280ede51ec6bf9b460c72e61985c4ce5')

build() {
    cd ${_pkgname}-${pkgver}
    python2 setup.py build
}

package() {
    cd ${_pkgname}-${pkgver}
    python2 setup.py install --root="${pkgdir}" -O1 --skip-build
    install -Dm644 LICENSE.txt "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE.txt"
}
