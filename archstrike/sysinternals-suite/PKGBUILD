# Maintainer: ArchStrike <team@archstrike.org>

buildarch=1

pkgname=sysinternals-suite
pkgver=20191218
pkgrel=1
groups=('archstrike')
pkgdesc="Sysinternals tools suite"
url="http://sysinternals.com"
license=('sysinternals')
arch=('any')
makedepends=('unzip')
source=(http://download.sysinternals.com/files/SysinternalsSuite.zip)
sha512sums=('15f588ef94e91fe38eeea416b5c13b644beaa419da467e27f9a2ff28f223dcda243ababc9c7ee93e67c8fa0fbd76e11e1a6fb25bbd78b886bd4c6ed07d3d31e2')

package() {
  cd "$srcdir"

  # Base directory.
  install -dm755 "$pkgdir/usr/share/sysinternals-suite"

  find . -type l -exec rm {} \;

  # Transform all files to lowercase
  for f in *; do
    lc=$(echo $f | tr '[A-Z]' '[a-z]')

    if [ ! -f $f -o -f $lc ]; then
      continue
    fi

    mv -i $f $lc
  done

  install -m755 *.exe *.sys "$pkgdir/usr/share/sysinternals-suite"
  install -m644 *.chm *.hlp *.txt "$pkgdir/usr/share/sysinternals-suite"
}
