# Maintainer: ArchStrike <team@archstrike.org>
# Contributor: xorond <xorond@gmail.com>
_author='Karel Miko'
_perlmod='CryptX'

buildarch=220

pkgname=perl-crypt-x
pkgver=0.042
pkgrel=1
pkgdesc="Cryptographically secure random number generator"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="http://search.cpan.org/~mik/CryptX-$pkgver/"
license=('custom')
depends=('perl>=5.10.0')
options=(!emptydirs)
source=("http://search.cpan.org/CPAN/authors/id/M/MI/MIK/CryptX-$pkgver.tar.gz")
sha512sums=('6c3d6780295ec4749dd26319ab7c619b806c7461f4cb7db2561a6f642e7acbfd260eca98446413a44b2e3b5965dab5797ff1f856c04210713a7badc3677b1af5')

prepare() {
  cd "$srcdir/$_perlmod-$pkgver"

  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  install -dm755 "$pkgdir/usr/share/licenses/$pkgname"
}

build() {
  cd "$srcdir/$_perlmod-$pkgver"

  make
}

package() {
  cd "$srcdir/$_perlmod-$pkgver"

  make install DESTDIR="$pkgdir/"
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
