# Maintainer: ArchStrike <team@archstrike.org>

buildarch=212

pkgname=mdk3
pkgver=6
pkgrel=1
groups=('archstrike' 'archstrike-wireless' 'archstrike-fuzzers')
pkgdesc="WLAN penetration tool"
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
license=('GPL')
url='http://aspj.aircrack-ng.org/#mdk3'
makedepends=('sed')
depends=('glibc')
source=("http://aspj.aircrack-ng.org/mdk3-v$pkgver.tar.bz2")
sha512sums=('a5180fc231c2e041064467b9415d2d238ea680f19c88b2320983dd6dbe91a62af1a37da0fc548c1b0860ede046e1f9976dec729c919d8e6c0ab98231990dfec4')

prepare() {
  cd "$srcdir/mdk3-v$pkgver"
  sed -i -e "s:/usr/local:/usr:" Makefile
  sed -i "s|-g -O3|$CFLAGS|g" Makefile
  sed -i "s|/sbin|/bin|" Makefile
}

build() {
  cd "$srcdir/mdk3-v$pkgver"
  make -C osdep
  make
}

package() {
  cd "$srcdir/mdk3-v$pkgver"
  make DESTDIR="$pkgdir" install
}
