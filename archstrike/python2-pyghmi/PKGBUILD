# Maintainer: ArchStrike <team@archstrike.org>

buildarch=1

pkgname=python2-pyghmi
pkgver=1.0.9
pkgrel=1
pkgdesc="This is a pure python implementation of IPMI protocol."
arch=('any')
url="https://github.com/openstack/pyghmi"
license=('GPL')
depends=('python2')
makedepends=('python2-setuptools')
source=("https://github.com/openstack/pyghmi/archive/$pkgver.tar.gz")
sha512sums=('b6e1641ef9027e4061ad760a7547fbf023e1036efba64ba819f1ffef198bf69c73f0e752addaffaa8ba56e97a8f60a0b340c327cabeb1f25ba3770b8e723d49c')

build(){
  cd "${srcdir}/pyghmi-${pkgver}"
  python2 setup.py build
}

package() {
  cd "${srcdir}/pyghmi-${pkgver}"
  python2 setup.py install --root="$pkgdir" --optimize=1
}
