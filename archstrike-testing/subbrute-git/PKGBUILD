# Maintainer: ArchStrike <team@archstrike.org>
# Contributor: James An <james@jamesan.ca>

buildarch=1

_pkgname=subbrute
pkgname=$_pkgname-git
pkgver=20150903.r99
pkgrel=2
pkgdesc='A DNS meta-query spider that enumerates DNS records, and subdomains'
arch=('any')
url='https://github.com/TheRook/subbrute'
license=('GPL3')
depends=('python-dnspython' 'python-dnslib')
makedepends=('git')
provides=("$_pkgname")
conflicts=("$_pkgname")
options=('!emptydirs')
source=("git+https://github.com/TheRook/$_pkgname")

sha512sums=('SKIP')

pkgver() {
  cd $_pkgname
  printf "%s.r%s" "$(git show -s --format=%ci master | sed 's/\ .*//g;s/-//g')" "$(git rev-list --count HEAD)"
}

package() {
  cd $_pkgname

  install -dm755 "$pkgdir/usr/share/$_pkgname"
  install -m755 -t "$pkgdir/usr/share/$_pkgname" resolvers.txt names.txt names_small.txt
  install -Dm755 $_pkgname.py "$pkgdir/usr/bin/$_pkgname"
  install -Dm644 README.md "$pkgdir/usr/share/doc/$_pkgname/README.md"
}
