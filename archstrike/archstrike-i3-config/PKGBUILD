# Maintainer: ArchStrike <team@archstrike.org>

buildarch=1

pkgname=archstrike-i3-config
pkgver=1.0
pkgrel=1
groups=('archstrike-desktop')
arch=('any')
pkgdesc="i3wm configs for ArchStrike"
url="https://github.com/ArchStrike/archstrike-i3-config"
license=('GPL3')
depends=('i3-wm' 'i3lock' 'i3status' 'rofi' 'compton' 'notify-osd' 'ttf-hack' 'feh' 'scrot' 'imagemagick' 'ttf-font-awesome' 'gtk-theme-arc' 'firefox' 'terminator' 'thunar' 'ranger' 'thunderbird' 'hexchat' 'weechat')
source=("https://github.com/ArchStrike/archstrike-i3-config/archive/${pkgver}.tar.gz")
sha512sums=('53892dcebacd15988936d185def0045b3d7c6f62c599d266b0a1bdde3084e4357df8d5d769f947e75aa4c13e7138aa16348a8fe88ee958f9027838c45a36f3f1')

package() {

  install -dm755 ${pkgdir}/usr/share/${pkgname}

  cd ${pkgname}-${pkgver}
  cp -a --no-preserve=ownership * "${pkgdir}/usr/share/${pkgname}"

}
