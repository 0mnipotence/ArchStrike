# Maintainer: ArchStrike <team@archstrike.org>

buildarch=1

pkgname=facebrute
pkgver=0.3
pkgrel=4
pkgdesc="Facebook brute forcer script"
url="https://github.com/emerinohdz/FaceBrute"
license=('Artistic2.0')
groups=('archstrike' 'archstrike-crackers')
arch=('any')
depends=('python2')
source=("https://github.com/emerinohdz/FaceBrute/archive/v$pkgver.tar.gz")
sha512sums=('2b2a20fc683a8e95940b6087881e4eb665364c19f867898305d9f77203049608d490050ae5104161ca96bebaaea24e83c522fb83825c5dc05c52f466488c2120')

package() {
  cd FaceBrute-$pkgver
  install -dm755 "$pkgdir/usr/bin"
  install -dm755 "$pkgdir/usr/share/$pkgname"
  cp -a --no-preserve=ownership * "$pkgdir/usr/share/$pkgname"
  
cat > "$pkgdir/usr/bin/facebrute" <<EOF
#!/bin/sh
cd /usr/share/$pkgname
python2 facebrute.py "\$@"
EOF
chmod 755 "$pkgdir/usr/bin/facebrute"
}
