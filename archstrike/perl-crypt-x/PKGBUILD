# Maintainer: ArchStrike <team@archstrike.org>
# Contributor: xorond <xorond@gmail.com>
_author='Karel Miko'
_perlmod='CryptX'

buildarch=212

pkgname=perl-crypt-x
pkgver=0.037
pkgrel=1
pkgdesc="Cryptographically secure random number generator"
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
url="http://search.cpan.org/~mik/CryptX-$pkgver/"
license=('custom')
depends=('perl>=5.10.0')
options=(!emptydirs)
source=("http://search.cpan.org/CPAN/authors/id/M/MI/MIK/CryptX-$pkgver.tar.gz")
sha512sums=('8f3cd01a609cd77184895e1ed53ba683b8e0b0013ea308c159e0215ea3a1b8476f6d54beaf68f0741a00c3f2780dae4663eabf1c44ffa71b6352e2e745517fd2')

prepare() {
  cd "$srcdir/$_perlmod-$pkgver"

  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  install -dm755 "$pkgdir/usr/share/licenses/$pkgname"
}

build() {
  cd "$srcdir/$_perlmod-$pkgver"

  make
}

package() {
  cd "$srcdir/$_perlmod-$pkgver"

  make install DESTDIR="$pkgdir/"
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
