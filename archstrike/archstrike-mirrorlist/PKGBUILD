# Maintainer: ArchStrike <team@archstrike.org>

buildarch=1

pkgname=archstrike-mirrorlist
pkgver=20160624
pkgrel=1
pkgdesc='ArchStrike mirror list for use by pacman'
url='http://archstrike.org'
license=('GPL3')
groups=('archstrike')
arch=('any')
backup=("etc/pacman.d/$pkgname")
source=("$pkgname")
sha512sums=('102f124b8a661bf6cf9354cf489165804b75a251b516c7c5edaa2d573dcd447f243ceadecf7ceb415d80369d16d00dce9ba9d268484f1a6a0e870d62ab726b25')

package() {
  install -dm755 "$pkgdir/etc/pacman.d"
  install -Dm644 $pkgname "$pkgdir/etc/pacman.d/$pkgname"
}
