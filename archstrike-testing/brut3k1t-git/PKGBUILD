# Maintainer: ArchStrike <team@archstrike.org>

buildarch=1

pkgname=brut3k1t-git
_pkgname=brut3k1t
pkgver=20161213.r12
pkgrel=1
groups=('archstrike' 'archstrike-crackers')
arch=('any')
pkgdesc="Brute-force attack that supports multiple protocols and services"
url="https://github.com/ex0dus-0x/brut3k1t"
license=('MIT')
depends=('python2' 'python2-pip' 'python2-selenium' 'python2-paramiko' 'python2-fbchat' 'geckodriver' 'xmpppy')
makedepends=('git')
source=("${pkgname}::git+${url}.git" 'comment.patch')
sha512sums=('SKIP'
            '1f76f1152d6ee05f500c2268a6a63591e4d206c6c0d847b709880aaf8910c57ba99b9fcd254f7a4b7577d779ae1004455939a4eaddba9c2234456800f06507d5')

pkgver() {
  cd ${pkgname}
  printf "%s.r%s" "$(git show -s --format=%ci master | sed "s/\ .*//g;s/-//g")" "$(git rev-list --count HEAD)"
}

prepare() {
  cd ${pkgname}
  # unfinished function causes import error, commenting that out for now
  patch -Np1 -i "${srcdir}/comment.patch"
  grep -iRl 'python' . | xargs sed -i 's|python$|python2|g'
}

package() {
  cd ${pkgname}
  install -dm755 "${pkgdir}/usr/bin"
  install -dm755 "${pkgdir}/usr/share/${pkgname}"
  install -dm755 "${pkgdir}/usr/share/licenses/${pkgname}"

  install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}"; rm LICENSE
  cp -a --no-preserve=ownership * "${pkgdir}/usr/share/${pkgname}"

cat > "${pkgdir}/usr/bin/${_pkgname}" <<EOF
#!/usr/bin/env bash
cd /usr/share/${pkgname}
python2 brut3k1t.py "\$@"
EOF

chmod 755 "${pkgdir}/usr/bin/${_pkgname}"
}
