# Maintainer: ArchStrike <team@archstrike.org>

buildarch=192

pkgname=arch-audit
pkgver=0.1.6
pkgrel=1
groups=('archstrike' 'archstrike-misc')
arch=('x86_64' 'i686')
pkgdesc='pkg-audit-like utility for Arch Linux'
url="https://github.com/ilpianista/arch-audit"
license=('MIT')
depends=('curl')
depends_x86_64+=('gcc-libs-multilib')
makedepends=('cargo')
source=("https://github.com/ilpianista/arch-audit/archive/${pkgver}.tar.gz")
sha512sums=('ef040559edf0513eaf480aaedeb941d796a63b72e851cde2fb4b47458913853022cbd9e3669b7f7a50f8649621a16042da4a913debfa0517cb18b7e13a1458bb')

build() {
  cd ${pkgname}-${pkgver}
  cargo build --release
}

package() {
  cd ${pkgname}-${pkgver}
  install -dm755 "${pkgdir}/usr/bin/"
  install -dm755 "${pkgdir}/usr/share/licenses/${pkgname}"
  install -dm755 "${pkgdir}/usr/share/${pkgname}"

  install -Dm755 target/release/${pkgname} "${pkgdir}/usr/bin/${pkgname}"
  install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}"
  install -Dm644 systemd/arch-audit.service "${pkgdir}/usr/share/${pkgname}"
  install -Dm644 systemd/arch-audit.timer "${pkgdir}/usr/share/${pkgname}"
}
