# Maintainer: ArchStrike <team@archstrike.org>

buildarch=212

pkgname=sipp
pkgver=3.5.0
pkgrel=1
groups=('archstrike' 'archstrike-voip')
pkgdesc="A free Open Source test tool / traffic generator for the SIP protocol."
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
url='http://sipp.sourceforge.net/'
license=('GPL2')
depends=('ncurses')
makedepends=('autoconf')
source=(https://github.com/SIPp/sipp/archive/v$pkgver.tar.gz)
sha512sums=('770f5946a2a75c0b7696e130829ede58529358774fde667f3e811af9106a326d51300ad9554b9e6bf7a36c88c142d61c018869f6fc5de6ce2301a1a333a2de6f')

prepare() {
 cd $pkgname-$pkgver
 autoreconf -vifs
} 

build() {
  cd "$pkgname-$pkgver"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$pkgname-$pkgver"
  make DESTDIR=$pkgdir install
  install -Dm644 LICENSE.txt "$pkgdir/usr/share/licenses/$pkgname/LICENSE.txt"
}
