buildarch=212

pkgname=shodan
pkgver=1.4.2
pkgrel=1
groups=('archstrike' 'archstrike-recon')
pkgdesc='A Python2 library for Shodan.io'
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
url='http://github.com/achillean/shodan-python'
depends=('python2-click' 'python2-colorama' 'python2-requests' 'python2-simplejson')
license=('MIT')
arch=('any')
makedepends=('python2-setuptools')
source=("https://pypi.python.org/packages/source/s/$pkgname/$pkgname-$pkgver.tar.gz")
md5sums=('231fdda03b37c4cae7f0f7653fbfb10a')
sha512sums=('260548e37005b55a2cbcaeb1cfd702997849b4bb29eb3bf796e8fffb31116935cd99335c66f9d3090204db4dfeccc14c901a22593e53d6b114f8e1d460301fac')

build() {
  cd $pkgname-$pkgver
  python2 setup.py build
}

package() {
  cd $pkgname-$pkgver
  python2 setup.py install --root="$pkgdir" --optimize=1
  install -Dm0644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
