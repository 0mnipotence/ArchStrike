# Maintainer: ArchStrike <team@archstrike.org>                                                                                                                                                           [0/2845]

buildarch=1

pkgname=shodan
pkgver=1.6.0
pkgrel=1
groups=('archstrike' 'archstrike-recon')
pkgdesc='A Python2 library for Shodan.io'
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
url='http://github.com/achillean/shodan-python'
depends=('python2-click' 'python2-colorama' 'python2-requests' 'python2-simplejson')
license=('MIT')
arch=('any')
makedepends=('python2-setuptools')
source=("https://pypi.python.org/packages/00/70/dc9b0ceada3a3aa4b2e5ebed23331ca9a61539e063eb87ed5aa48890d708/shodan-${pkgver}.tar.gz")
sha512sums=('8a00b3577da8b701a664b6750de3633660ea0f113d6afa5469ee86cdba199f599b9e2f86c547d7777b389808e64be77a3a671df1b42b385ebd8846a34453dcfb')

build() {
  cd $pkgname-$pkgver
  python2 setup.py build
}

package() {
  cd $pkgname-$pkgver
  python2 setup.py install --root="$pkgdir" -O1 --skip-build
  install -Dm0644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  sed -i 's|python|python2|' $pkgdir/usr/lib/python2.7/site-packages/shodan/cli/worldmap.py
}
