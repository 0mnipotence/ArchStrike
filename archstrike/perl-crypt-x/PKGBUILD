# Maintainer: ArchStrike <team@archstrike.org>
# Contributor: xorond <xorond@gmail.com>
_author='Karel Miko'
_perlmod='CryptX'

buildarch=220

pkgname=perl-crypt-x
pkgver=0.040
pkgrel=1
pkgdesc="Cryptographically secure random number generator"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="http://search.cpan.org/~mik/CryptX-$pkgver/"
license=('custom')
depends=('perl>=5.10.0')
options=(!emptydirs)
source=("http://search.cpan.org/CPAN/authors/id/M/MI/MIK/CryptX-$pkgver.tar.gz")
sha512sums=('70503d7e6aeb5196aabff99d2e793a1ec9bb9806cbf04dca6268e8bb2ea6df706cb3861b873d10bbd66c386c1924862f6b87189d57982bb1c672e912ebf0977f')

prepare() {
  cd "$srcdir/$_perlmod-$pkgver"

  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  install -dm755 "$pkgdir/usr/share/licenses/$pkgname"
}

build() {
  cd "$srcdir/$_perlmod-$pkgver"

  make
}

package() {
  cd "$srcdir/$_perlmod-$pkgver"

  make install DESTDIR="$pkgdir/"
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
